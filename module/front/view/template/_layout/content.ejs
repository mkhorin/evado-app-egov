<% layout(_view.get('_layout/main')) %>

<div class="front-wrapper wrapper">

    <header class="main-header">

        <%- include(_view.get('_part/nav/logo')) %>

        <nav class="navbar navbar-static-top" role="navigation" class>
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <%- include(_view.get('_part/nav/userToggle')) %>
                </ul>
            </div>
            <%- include(_view.get('_part/nav/commonMenuToggle')) %>
            <%- include(_view.get('_part/tool/modalBack')) %>
        </nav>
    </header>

    <div id="content-wrapper" class="content-wrapper">

        <div class="container">
            <%- include(_view.get('_part/other/alert')) %>
            <%- body %>
        </div>
    </div>

    <footer class="main-footer">
        <div class="text-center">
            <a href="https://github.com/mkhorin/evado" target="_blank">Powered by Evado</a>
        </div>
    </footer>
</div>

<%- include(_view.get('_part/other/dialog')) %>

<div class="global-loader overlay">
    <span class="fa fa-spinner fa-spin"></span>
</div>

<template id="notice-template">
    <div class="hidden">
        <button type="button" class="close">&times;</button>
        <p class="message"></p>
    </div>
</template>

