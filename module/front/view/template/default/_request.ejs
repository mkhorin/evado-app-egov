
<div class="page" data-page="request" data-handler="RequestPage">

    <div class="page-head">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" data-action="main" data-t="">Main</a></li>
            <li class="breadcrumb-item"><a href="#" data-action="account" data-t="">Account</a></li>
            <li class="breadcrumb-item" data-t="">Request</li>
        </ol>
        <%- include('./_user') %>
    </div>

    <div class="request loadable-container" data-handler="Request">

        <template data-id="item">

            <div class="icon-title clearfix">
                <img data-src="<%- _url('/api/base/file/download') %>?c=icon&id={{icon}}"
                     class="float-left thumbnail-transparent thumbnail-sm img-thumbnail img-fluid" alt="{{name}}">
                <h1 data-t="meta.class.request">{{title}}</h1>
                <h3 class="subtitle">
                    <span data-t="">Current request state</span>:
                    &nbsp;<b class="{{stateCss}}" data-t="meta.class.request">{{state}}</b>
                </h3>
            </div>
            <div class="form" data-handler="Form">
                <div class="form-tabs tabs" data-id="tabs">
                    <div class="nav nav-tabs" role="tablist">
                        <a class="nav-item nav-link active" href="#" role="tab" data-id="comments" data-t="">Comments</a>
                        <a class="nav-item nav-link" href="#" role="tab" data-id="form" data-t="">Form</a>
                    </div>
                    <div class="tab-content">
                        <div class="form-base-group tab-pane active" data-id="comments">
                            <%- include('./_comments') %>
                        </div>
                        <div class="form-base-group tab-pane" data-id="form">
                            {{form}}
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <template data-id="group">
            <fieldset class="form-base-group form-set {{active}}">
                <legend>
                    <div class="form-set-toggle">
                        <span class="icon fas fa-chevron-right"></span>
                        <span data-t="meta.class.request" title="{{hint}}">{{label}}</span>
                    </div>
                </legend>
                <div class="form-set-body form-base-group-body">{{content}}</div>
            </fieldset>
        </template>

        <template data-id="attr">
            <div class="form-attr form-group row {{required}}">
                <label class="col-md-3 col-form-label" data-t="meta.class.request"
                       title="{{extHint}}">{{label}}</label>
                <div class="col-md-9">
                    {{content}}
                    <div class="error-block"></div>
                </div>
            </div>
        </template>

        <template data-id="static">
            <p class="form-control-plaintext">{{value}}</p>
        </template>

        <template data-id="empty">
            <div class="alert-warning alert">
                <span data-t="">You have no requests</span>
            </div>
        </template>

        <template data-id="error">
            <div class="alert-danger alert">{{text}}</div>
        </template>

        <div class="loadable-content"></div>
        <div class="loader"><i class="fa fa-spinner fa-spin"></i></div>
    </div>
</div>