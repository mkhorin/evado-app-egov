<%
const link = sort.getLink(Object.keys(sort.getOrders())[0]);
%>

<span data-t="">Sort by</span>

<div class="dropdown inline-block">

    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="glyphicon glyphicon-arrow-<%- link.options.class === 'asc' ? 'up' : 'down' %>"></span>
        <span data-t=""><%- link.label %></span>
        <span class="caret"></span>
    </button>

    <ul class="dropdown-menu">
        <% for (const attr of Object.keys(sort.attrs)) { %>
        <% const link = sort.getLink(attr); %>
        <li>
            <a href="<%- link.url %>" data-t=""><%- link.label %></a>
        </li>
        <% } %>
    </ul>
</div>